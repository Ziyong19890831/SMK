@model SMK.Data.Entity.GenSpecial

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-sm-12">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SpecialistNo" />
                        <div class="form-group">
                            <label asp-for="SpecialistName" class="control-label"></label>
                            <input asp-for="SpecialistName" class="form-control" />
                            <span asp-validation-for="SpecialistName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="修改" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-info">回上頁</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>