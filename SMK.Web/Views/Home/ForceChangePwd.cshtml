
<div class="modal" id="modal-ForceChangePwd" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    變更密碼 - 您已有超過90天尚未變更密碼
                </h4>
            </div>
            <div class="modal-body">
                <form id="myForm" method="post" class="form-horizontal" asp-action="ChangeMyPwd" asp-controller="Home">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="col-sm-4 control-label">新密碼</label>
                        <div class="col-sm-8">
                            <input type="password" autocomplete="new-password" class="form-control" name="pwd" id="txtPwd" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{8,}$" title="不符合密碼規定(8碼以上，需含英文字母大小寫、數字及特殊符號)" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">新密碼確認</label>
                        <div class="col-sm-8">
                            <input type="password" autocomplete="new-password" class="form-control" id="txtPwdConfirm" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*\W).{8,}$" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-primary" id="btnChangePincode">確定</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@section scripts{ 
    <script>
        $(function () {
            $('#modal-ForceChangePwd').modal({backdrop:'static',keyboard:false});
        });
    </script>
}