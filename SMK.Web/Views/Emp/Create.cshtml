@using SMK.Web.Heppers;
@using SMK.Data.Entity;
@using SMK.Web.Services;
@inject EmpService empService
@model SMK.Data.Entity.GenEmpData

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleList = await empService.GetSelectLists<Role>(context => context.Role, x => x.Id, x => x.Name);
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-sm-12">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Account" class="control-label"></label>
                            <input asp-for="Account" class="form-control" />
                            <span asp-validation-for="Account" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Pwd" class="control-label"></label>
                            <input asp-for="Pwd" type="password" class="form-control" />
                            <span asp-validation-for="Pwd" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">角色</label> 
                            <div class="col-sm-4">
                                @Html.MyDropDownList("RoleId",
                               roleList,
                               (m) => m,
                               new { @class = "form-control", id = "RoleId" },true)
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="新增" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-info">回上頁</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>