    var prsnTypeList = await hospContractService.GetSelectLists<GenPrsnType>(Context => Context.GenPrsnType,
                                                                    x => x.PrsnType,
                                                                    x => x.PrsnTypeName);
    var SmkcontractsList = await hospContractService.GetSelectLists<GenSmkcontract>(
