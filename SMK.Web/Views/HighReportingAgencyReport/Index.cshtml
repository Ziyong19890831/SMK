@{
}
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="col-sm-12">
                    <form id="queryForm" asp-action="Export" class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-row mb-4">
                            <div class="form-inline col-6">
                                <label class="col-sm-5 col-form-label text-right"  asp-for="STARTDATE"></label>
                                <div class="col-sm-7">
                                    <input asp-for="STARTDATE" class="form-control" placeholder="yyyyMM" />
                                </div>
                                <span asp-validation-for="STARTDATE" class="text-danger"></span>
                            </div>
                            <div class="form-inline col-6">
                                <label class="col-sm-5 col-form-label text-right" asp-for="ENDDATE"></label>
                                <div class="col-sm-7">
                                    <input asp-for="ENDDATE" class="form-control" placeholder="yyyyMM"/>
                                </div>
                                <span asp-validation-for="ENDDATE" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row mb-4">
                            <div class="form-inline col-6">
                                <label class="col-sm-5 col-form-label text-right" asp-for="Type"></label>
                                <div class="col-sm-7 form-row">
                                    
                                    <input type="radio" asp-for="Type" value="agency"/>
                                    <label>機構</label>
                                </div>
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            @*<i class="fa fa-file-excel"></i>*@
                            <input value="匯出 (EXCEL)" type="submit" asp-action="Export" asp-route-fileType="xlsx" class="btn btn-primary mr-3" />
                            <input value="匯出 (ODS)" type="submit" asp-action="Export" asp-route-fileType="ods" class="btn btn-primary" />
                            
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
